# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# PostgreSQL connection string with connection pool parameters
# Format: postgresql://[user[:password]@][host][:port][/dbname][?param1=value1&...]
DATABASE_URL=postgresql://user:password@localhost:5432/synqit_db?connection_limit=25&pool_timeout=20&connect_timeout=20

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-here

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM="Synqit <noreply@synqit.com>"

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_EXPIRE_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary Configuration (File Upload Service)
# Sign up at https://cloudinary.com to get these values
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret